import QtTest 1.0
import QtQuick 2.0
import Qt5Mozilla 1.0
import QtMozEmbed.Tests 1.0
import "../../shared/componentCreation.js" as MyScript
import "../../shared"

TestWindow {
    id: appWindow

    property string favicon

    name: testcaseid.name

    Connections {
        target: QmlMozContext
        onOnInitialized: {
            QmlMozContext.addComponentManifest(TestHelper.getenv("QTTESTSROOT") + "/components/TestHelpers.manifest")
        }
    }

    QmlMozView {
        id: webViewport

        visible: true
        focus: true
        active: true
        anchors.fill: parent
        onViewInitialized: {
            appWindow.mozViewInitialized = true
            webViewport.addMessageListener("Link:SetIcon")
        }
        onRecvAsyncMessage: {
            // print("onRecvAsyncMessage:" + message + ", data:" + data)
            if (message == "Link:SetIcon" && data.url.slice(0, 17) == "data:image/x-icon") {
                appWindow.favicon = data.url
            }
        }
    }

    TestCase {
        id: testcaseid
        name: "tst_favicon"
        when: windowShown

        function cleanupTestCase() {
            MyScript.dumpTs("tst_favicon cleanup")
        }

        function test_TestFaviconPage() {
            MyScript.dumpTs("test_TestFaviconPage start")
            verify(MyScript.waitMozContext())
            verify(MyScript.waitMozView())
            webViewport.url = TestHelper.getenv("QTTESTSROOT") + "/auto/shared/favicons/favicon.html"
            verify(MyScript.waitLoadFinished(webViewport))
            compare(webViewport.loadProgress, 100)
            verify(MyScript.wrtWait(function() { return !webViewport.painted }))
            verify(MyScript.wrtWait(function() { return !appWindow.favicon }))
            compare(appWindow.favicon, "data:image/x-icon;base64,")
            MyScript.dumpTs("test_TestFaviconPage end")
        }
    }
}
